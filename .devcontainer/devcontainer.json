{
  "name": "CSV to OFX Converter Development",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "njpwerner.autodocstring",
        "eamodio.gitlens",
        "GitHub.copilot",
        "tamasfe.even-better-toml"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "python.testing.unittestEnabled": true,
        "python.testing.unittestArgs": [
          "-v",
          "-s",
          "./tests",
          "-p",
          "test_*.py"
        ],
        "editor.formatOnSave": true,
        "editor.rulers": [79, 120],
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true,
          "**/.pytest_cache": true
        },
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  // Forward ports for potential web-based tools
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "noVNC (GUI Access)",
      "onAutoForward": "notify"
    }
  },

  // Use 'postCreateCommand' to run commands after the container is created
  "postCreateCommand": "bash .devcontainer/post-create.sh",

  // Set environment variables
  "remoteEnv": {
    "DISPLAY": ":1",
    "PYTHONPATH": "/workspaces/csv-to-ofx-converter/src",
    "PYTHONUNBUFFERED": "1"
  },

  // Comment out to connect as root instead
  "remoteUser": "vscode",

  // Features to add to the dev container
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": true
    }
  },

  // Mounts for persistent data
  "mounts": [
    "source=${localWorkspaceFolder}/.vscode,target=/workspaces/csv-to-ofx-converter/.vscode,type=bind,consistency=cached"
  ]
}
